<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingtext"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="TextView"
            android:textAlignment="center" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Edit Profile"
            android:textSize="10sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Personal Info"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tab_likes_dislikes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Likes/Dislikes"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>

            <TableRow
                android:id="@+id/tab_hobbies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Hobbies"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tab_favourite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Favourite"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>

            <TableRow
                android:id="@+id/tab_documents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Documents"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Preferences"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tab_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Language"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/settingtext10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Darkmode"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingarrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arrow_next_small_svgrepo_com" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>